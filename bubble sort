#include<stdio.h>
void bubble_sort(int* arr, int size)
{
	int i, j, count = 0;
	for (i = 0; i < size-1; i++)
	{
		count = 0;
		for (j = 0; j < size - 1 - i; j++)
		{
			if (arr[j] > arr[j + 1])
			{
				int tmp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = tmp;
				count = 1;
			}
		}
		if (count == 0)
		{
			break;
		}
	}
}
void print_arr(int* arr,int size)
{
	int i;
	for (i = 0; i < size; i++)
	{
		printf("%d ", arr[i]);
	}
}
int main()
{
	int arr[10] = { 3,2,5,4,3,9,10,7,1,5 };
	bubble_sort(arr,10);
	print_arr(arr,10);
	return 0;
}
