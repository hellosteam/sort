void sort(char* arr, int size_t)
	{
		int i, j,count=0;
		for (i = 0; i < size_t; i++)
		{
			count = 0;
			for (j = 0; j < size_t - i; j++)
			{
				if (arr[i] > arr[i + 1])
				{
					int tmp = arr[i];
					arr[i] = arr[i + 1];
					arr[i + 1] = tmp;
					count=1;
				}
			}
			if (count = 1)
			{
				return 0;
			}
		}
	}
