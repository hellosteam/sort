#include<stdio.h>
void Merge_sort(int* arr,int* arr1,int start,int end)//归并排序，递归版，arr是要排序的数组，arr1是一个要和arr等大的中间数组，start和end分别是要排序的区间的下标。
{
	if (start >= end)
	{
		return;
	}
	int len = end - start;
	int mid = (len >> 1) + start;
	int start1 = start;
	int end1 = mid;
	int start2 =mid + 1;
	int end2 = end;
	int k=0;
	Merge_sort(arr, arr1, start1, end1);
	Merge_sort(arr, arr1, start2, end2);

	while(start1 <= end1 && start2 <= end2)
	{
		arr1[k++] = arr[start1] < arr[start2] ? arr[start1++] : arr[start2++];
	}
	while (start1<= end1)
	{
		arr1[k++] = arr[start1++];
	}
	while (start2 <= end2)
	{
		arr1[k++] = arr[start2++];
	}
	for (k =0; k <=len; k++)
	{
		arr[k+start] = arr1[k];
	}
}
